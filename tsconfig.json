{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "allowJs": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./build",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "module": "CommonJS",
    "lib": ["ESNext", "dom"]
  },
  "include": ["./src"]
}
